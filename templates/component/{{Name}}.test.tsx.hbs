import { describe, it, expect } from "vitest";
import { render, screen } from "@testing-library/react";
import { {{pascalCase name}} } from "./{{pascalCase name}}";

describe("{{pascalCase name}}", () => {
  it("renders children", () => {
    render(<{{pascalCase name}}>Hello</{{pascalCase name}}>);
    expect(screen.getByText("Hello")).toBeDefined();
  });

  it("applies the component class", () => {
    const { container } = render(<{{pascalCase name}}>Test</{{pascalCase name}}>);
    expect(container.firstChild).toHaveClass("{{kebabCase name}}");
  });

  it("applies custom className", () => {
    const { container } = render(<{{pascalCase name}} className="custom">Test</{{pascalCase name}}>);
    expect(container.firstChild).toHaveClass("custom");
  });
});
